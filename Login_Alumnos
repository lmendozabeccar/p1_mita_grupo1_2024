#Profesor, sin arroba uade.
#Alumno, con arroba uade.

print()
print("Bienvenido al sector de Ingreso de la aplicación.")

ingreso_sistemas = [
    ["nicovera@uade.edu.ar","nicovera01"],
    ["tomiweins@uade.edu.ar","tomiweins01"],
    ["santimatra@uade.edu.ar","santimatra01"],
    ["lucasmendo@uade.edu.ar","lucasmendo01"],
    ["silvifalcon@uade.edu.ar","silvifalcon01"],
    ["alevera@uade.edu.ar","alevera01"],
    ["malecristaldi@uade.edu.ar","malecristaldi01"],
    ["lucaspagli@uade.edu.ar","lucaspagli01"],
    ["fabrisuccar@uade.edu.ar","fabrisuccar01"],
    ["lautipadin@uade.edu.ar","lautipadin01"]
                                ]
#Se recortan los nombres de los productos a un máximo de 8 caracteres.
productos_recortados = [[mail[:18], contraseña[:12]] for mail, contraseña in ingreso_sistemas]

# Imprimir la lista con formato de f-strings
print(f"|{"Username":^15}| |{"Password":^11}|")
print("-" * 26)

for mail, contraseña in productos_recortados:
    print(f"|{mail:^15}| |{contraseña:^8}|")

print()

# Proceso de Log-in
username=str (input("Por favor, ingresar su mail de usuario de alumno: "))
flag=0
while flag==0:
    i=0
    while len(ingreso_sistemas)>i and flag!=1:
        if username==ingreso_sistemas[i][0]:
            flag=1
        else:
            i += 1
    if flag==0:
        print("El ususario es incorrecto, por favor volver a ingresar el mail.")
        username=str (input("Por favor, ingresar su mail de usuario de alumno: "))

password=str (input("Ingresar contraseña de usuario: "))
cont=0
while flag==1 and cont<3:
    if password==ingreso_sistemas[i][1]:
        flag=0
    else:
        print("Contraseña incorrecta, por favor volver a intentarlo.")
        cont += 1    
        if cont==2:
            print("Precaución, solamente le queda 1 intento para lograr ingresar a la aplicación.")
        print()
        password=str (input("Ingresar contraseña de usuario: "))
print()
if cont==3:
    print("Numerosos intentos fallidos, ingreso incorrecto.")
else:
    print("Ingreso correcto a la aplicación.")
